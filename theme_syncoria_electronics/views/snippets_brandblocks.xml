<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <template id="snippet_brandshop" name="Brand Shop">
	        <section class="section-blocks brand-blocks clearfix bradingblocks" id="bradingblocks">
                <div class="container">
                    <div class="title-bar clearfix">
                        <h3>Our Brand Shop</h3>
                    </div>
                    <div class="slider  brand-slider">
                        <div class="item">
                            <a href="#"><img src="/theme_syncoria_electronics/static/src/images/icon1.jpg" alt="preview brand"/></a>
                        </div>
                        <div class="item">
                            <a href="#"><img src="/theme_syncoria_electronics/static/src/images/icon2.jpg" alt="preview brand"/></a>
                        </div>
                        <div class="item">
                            <a href="#"><img src="/theme_syncoria_electronics/static/src/images/icon3.jpg" alt="preview brand"/></a>
                        </div>
                        <div class="item">
                            <a href="#"><img src="/theme_syncoria_electronics/static/src/images/icon4.jpg" alt="preview brand"/></a>
                        </div>
                        <div class="item">
                            <a href="#"><img src="/theme_syncoria_electronics/static/src/images/icon5.jpg" alt="preview brand"/></a>
                        </div>
                        <div class="item">
                            <a href="#"><img src="/theme_syncoria_electronics/static/src/images/icon3.jpg" alt="preview brand"/></a>
                        </div>
                    </div>
                </div>
            </section>

    </template>
    <template id="brandshop_place_into_bar" inherit_id="website.snippets" name="Brand Shop">
        <xpath expr="//div[@id='snippet_structure']/div[@class='o_panel_body']" position="inside">
            <t t-snippet="theme_syncoria_electronics.snippet_brandshop"
                   t-thumbnail="/theme_syncoria_electronics/static/src/images/branding.png"/>
        </xpath>
    </template>
</odoo>
